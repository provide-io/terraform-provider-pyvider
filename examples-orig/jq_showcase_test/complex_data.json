{
  "apiVersion": "apps/v1",
  "kind": "Deployment",
  "metadata": {
    "name": "api-gateway",
    "namespace": "production",
    "uid": "a1b2c3d4-e5f6-7890-1234-567890abcdef",
    "labels": {
      "app": "api-gateway",
      "tier": "frontend"
    },
    "annotations": {
      "monitoring.pyvider.io/scrape": "true",
      "monitoring.pyvider.io/port": "9090"
    }
  },
  "spec": {
    "replicas": 3,
    "strategy": {
      "type": "RollingUpdate",
      "rollingUpdate": {
        "maxUnavailable": "25%",
        "maxSurge": "25%"
      }
    },
    "template": {
      "metadata": {
        "labels": {
          "app": "api-gateway"
        }
      },
      "spec": {
        "serviceAccountName": "api-gateway-sa",
        "containers": [
          {
            "name": "gateway-container",
            "image": "pyvider/gateway:1.2.3",
            "ports": [
              {
                "name": "http",
                "containerPort": 8080,
                "protocol": "TCP"
              },
              {
                "name": "metrics",
                "containerPort": 9090,
                "protocol": "TCP"
              }
            ],
            "env": [
              {
                "name": "LOG_LEVEL",
                "value": "info"
              },
              {
                "name": "AUTH_SERVICE_URL",
                "value": "http://auth-service.production.svc.cluster.local"
              },
              {
                "name": "USER_SERVICE_URL",
                "value": "http://user-service.production.svc.cluster.local"
              }
            ],
            "resources": {
              "limits": {
                "cpu": "1000m",
                "memory": "512Mi"
              },
              "requests": {
                "cpu": "500m",
                "memory": "256Mi"
              }
            },
            "readinessProbe": {
              "httpGet": {
                "path": "/healthz",
                "port": 8080
              },
              "initialDelaySeconds": 5,
              "periodSeconds": 10
            },
            "livenessProbe": null
          },
          {
            "name": "sidecar-container",
            "image": "pyvider/auth-proxy:0.5.0",
            "ports": [
              {
                "name": "proxy",
                "containerPort": 9901,
                "protocol": "TCP"
              }
            ],
            "env": [
              {
                "name": "PROXY_TARGET_PORT",
                "value": "8080"
              }
            ],
            "resources": {
              "requests": {
                "cpu": "100m",
                "memory": "64Mi"
              }
            }
          }
        ]
      }
    }
  }
}